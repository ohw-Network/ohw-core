<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.ohw</groupId>
    <artifactId>ohw-core</artifactId>
    <version>1.0.2</version>
    <packaging>jar</packaging>

    <name>ohw-core</name>

    <properties>
        <java.version>8</java.version>
        <!-- use a version matching your server's Minecraft release -->
        <!-- 1.8.x servers generally compile against the 1.8.8 snapshot; 1.8.9 runs fine on it -->
        <spigot.version>1.8.8-R0.1-SNAPSHOT</spigot.version>
        <!-- SFTP Server Configuration -->
        <sftp.host>172.27.160.60</sftp.host>
        <sftp.port>2022</sftp.port>
        <sftp.user>inytw.7439e6dc</sftp.user>
        <sftp.password>Inyisagay87</sftp.password>
        <sftp.remote.path>/home/container/plugins</sftp.remote.path>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>${spigot.version}</version>
            <scope>provided</scope>
            <!-- exclude bungeecord-chat which is a transitive dependency
                 not needed for compiling and often missing for older versions -->
            <exclusions>
                <exclusion>
                    <groupId>net.md-5</groupId>
                    <artifactId>bungeecord-chat</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.10.1</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <!-- Automatically upload jar to SFTP server after build using WinSCP via PowerShell -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <echo message="Running WinSCP upload script via PowerShell..." />
                                <exec executable="powershell.exe" failonerror="false">
                                    <arg value="-NoProfile" />
                                    <arg value="-ExecutionPolicy" />
                                    <arg value="Bypass" />
                                    <arg value="-File" />
                                    <arg value="${basedir}\\upload.ps1" />
                                </exec>
                                <echo message="WinSCP upload script executed (check output for success)." />
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>